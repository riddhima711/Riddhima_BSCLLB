#include<stdio.h>
void main()
{
    int n,i,pr=1;
    printf("Enter the value of n:\n");
    scanf("%d",&n);
    if(n<=1)
    {
        pr=0;
    }
    else
    {
        for(i=2;i<=n/2;i++)
        {
            if(n%i==0)
            {
                pr=0;
                break;
            }
        }
    }
    if(pr)
    {
        printf("%d is a prime number\n",n);
    }
    else
       {
        printf("%d is not a prime number\n",n);
       }
}
