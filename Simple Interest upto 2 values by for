#include <stdio.h>
int main()
{
    float p, r, t, si;
    int i;

    for(i = 1; i <= 3; i++)
{
        printf("Enter Principal, Rate of Interest, and Time (for set %d): ", i);
        scanf("%f %f %f", &p, &r, &t);

        si = (p * r * t) / 100;
        printf("Simple Interest for set %d = %.2f\n", i, si);
    }
    return 0;
}
